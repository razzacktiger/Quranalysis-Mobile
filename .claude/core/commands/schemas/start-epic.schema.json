{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "command:start-epic",
  "title": "start-epic",
  "description": "Begin work on an epic with branch setup and session initialization",
  "type": "object",
  "properties": {
    "epic_number": {
      "type": "integer",
      "description": "Numeric identifier for the epic"
    },
    "epic_name": {
      "type": "string",
      "description": "Name/title of the epic"
    },
    "bugs": {
      "type": "boolean",
      "description": "Whether to focus on bug fixing instead of new tasks"
    }
  },
  "required": ["epic_number", "epic_name"],
  "x-workflow": {
    "aliases": ["/start-epic"],
    "requires": {
      "params": ["epic_number", "epic_name"],
      "optional_params": ["--bugs"],
      "state": []
    },
    "state_reads": [
      "state/project.json",
      "state/tasks.json"
    ],
    "state_writes": [
      {
        "file": "state/project.json",
        "action": "update",
        "fields": ["active.epic_id", "active.branch", "active.session_started"]
      },
      {
        "file": "state/session.json",
        "action": "reset",
        "fields": ["started", "epic_id", "branch"]
      }
    ],
    "git_operations": ["checkout_or_create_branch"],
    "instructions": "../instructions/standard-loop/start-epic.md"
  }
}
