{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "project.schema.json",
  "title": "Project State",
  "description": "Current project status and progress tracking",
  "type": "object",
  "required": ["version", "active", "progress"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "description": "Workflow system version"
    },
    "active": {
      "type": "object",
      "description": "Currently active work context",
      "required": ["epic_id"],
      "properties": {
        "epic_id": {
          "type": ["string", "null"],
          "description": "Current epic identifier (e.g., EPIC-5-PROFILE)"
        },
        "feature_id": {
          "type": ["string", "null"],
          "description": "Current feature identifier (e.g., 5.1)"
        },
        "task_id": {
          "type": ["string", "null"],
          "description": "Current task identifier (e.g., 5.1.1)"
        },
        "branch": {
          "type": ["string", "null"],
          "description": "Git branch name"
        },
        "session_started": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Date session started (YYYY-MM-DD)"
        }
      }
    },
    "blockers": {
      "type": "array",
      "description": "List of current blockers",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "description": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "created_at": { "type": "string", "format": "date" }
        }
      }
    },
    "progress": {
      "type": "object",
      "description": "Progress by epic",
      "additionalProperties": {
        "type": "object",
        "required": ["status", "completed", "total"],
        "properties": {
          "status": {
            "type": "string",
            "enum": ["active", "complete", "archived", "blocked"]
          },
          "completed": {
            "type": "integer",
            "minimum": 0
          },
          "total": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "notes": {
      "type": "array",
      "description": "Important project notes",
      "items": {
        "type": "string"
      }
    }
  }
}
